{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/actions/index.js",
    "lib/models/product.model.js",
    "lib/models/people.model.js",
    "lib/nodemailer/index.js",
    "lib/scraper/index.js",
    "lib/mongoose.js",
    "lib/utils.js",
    "components/HeroCarousel.jsx",
    "components/Modal.jsx",
    "components/Navbar.jsx",
    "components/PriceInfoCard.jsx",
    "components/ProductAlert.jsx",
    "components/ProductCard.jsx",
    "components/ProductLoader.jsx",
    "components/SearchBar.jsx",
    "components/AuthDialog.jsx",
    "components/ClientSessionProvider.jsx",
    "app/product/[id]/loading.jsx",
    "app/product/[id]/page.jsx",
    "app/layout.jsx",
    "app/page.jsx"
  ],
  "exclude": ["node_modules"]
}
